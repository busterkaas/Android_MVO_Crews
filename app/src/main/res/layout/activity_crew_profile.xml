<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".UI.Crew.CrewProfileActivity">

    <TextView
        android:id="@+id/myCrewName"
        android:text="CREW NAME"
        android:typeface="sans"
        android:textSize="40dp"
        android:textColor="#ff471a"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/myCrewImage"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/myCrewName"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:src="@drawable/nolologo"/>
    <View
        android:id="@+id/borderId"
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_below="@+id/myCrewImage"
        android:background="#ff562c"/>

    <TextView
        android:id="@+id/txtCL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crew leader:"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/borderId"
        android:textColor="@color/mvoWhite"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/myCrewLeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leader"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@+id/borderId"
        android:textColor="@color/mvoWhite"/>

    <TextView
        android:id="@+id/txtGameSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game suggestions:"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txtCL"
        android:textColor="@color/mvoWhite"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnAply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Aply for membership"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@color/mvoOrange" />

    </LinearLayout>


</RelativeLayout>
