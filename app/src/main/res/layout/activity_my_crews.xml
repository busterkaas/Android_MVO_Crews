<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context=".UI.User.MyCrewsActivity">

    <TextView
        android:id="@+id/myCrews"
        android:text="My Crews"
        android:typeface="sans"
        android:textSize="40dp"
        android:textColor="#ff471a"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/crew1"
        android:orientation="vertical"
        android:layout_below="@id/myCrews"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="275dp"
        android:clickable="true"
        android:background="@drawable/image_rounded_corner">

        <TextView
            android:id="@+id/crewName1"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:text="(Empty)"
            android:textColor="#ff471a"
            android:textSize="22sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/crewImage1"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:src="@drawable/findcrew"
            android:layout_gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/crew2"
        android:orientation="vertical"
        android:layout_below="@id/crew1"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="275dp"
        android:clickable="true"
        android:background="@drawable/image_rounded_corner">

        <TextView
            android:id="@+id/crewName2"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:text="(Empty)"
            android:textColor="#ff471a"
            android:textSize="22sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/crewImage2"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:src="@drawable/findcrew"
            android:layout_gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/crew3"
        android:orientation="vertical"
        android:layout_below="@id/crew2"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="275dp"
        android:clickable="true"
        android:background="@drawable/image_rounded_corner">

        <TextView
            android:id="@+id/crewName3"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:text="(Empty)"
            android:textColor="#ff471a"
            android:textSize="22sp"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/crewImage3"
            android:src="@drawable/findcrew"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>


    </LinearLayout>


</RelativeLayout>
